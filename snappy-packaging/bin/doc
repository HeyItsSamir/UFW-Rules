#!/bin/sh

docdir="$SNAP_APP_PATH/docs"

usage() {
    cat <<EOM
Usage: ufw.doc <doc>

Available docs are:
ufw
ufw-framework
iptables
ip6tables
iptables-restore
ip6tables-restore

Eg:
$ ufw.doc ufw | less
EOM
}

if [ -z "$1" ]; then
    usage
    exit 1
fi

doc="$docdir/$1"
if [ ! -f "$doc" ]; then
    echo "Could not find '$1'"
    usage
    exit 1
fi

cat "$doc"
